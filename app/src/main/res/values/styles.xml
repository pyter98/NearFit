<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#232f3e</item>
        <item name = "android:textColor">#000</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@color/colorPrimary</item>
        <item name="android:cursorVisible">true</item>


    </style>

    <style name="MainTheme">
        <item name="android:background">@color/colorPrimary</item>
    </style>




    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Gabriele" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:statusBarColor">#160799</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name = "android:textColor">#000</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:bottomLeftRadius">280dp</item>
        <item name="android:bottomRightRadius">280dp</item>
        <item name="android:topLeftRadius">280dp</item>
        <item name="android:topRightRadius">280dp</item>
        <item name="android:colorButtonNormal">@color/colorPrimary</item>


    </style>

    <style name="BottomNavigationViewGab">
        <item name="android:background">#160799</item>
    </style>

    <style name="Ernesto" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name = "android:textColor">#000</item>
        <item name="android:colorBackground">@color/colorAccent</item>

        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="android:statusBarColor">#089820</item>



    </style>

    <style name="Piero" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#980206</item>

    </style>

    <style name="Riccardo" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#9810FE</item>

    </style>

</resources>