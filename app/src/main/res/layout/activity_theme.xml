<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings.Theme">

    <Button
        android:id="@+id/gabriele"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_gab"
        android:text="Tema 1"
        android:textSize="20sp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:background="#fff"

        />

    <Button
        android:id="@+id/piero"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_piero"
        android:text="Tema 2"
        android:textSize="20sp"
        android:layout_below="@+id/gabriele"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:background="#fff"

        />
    <Button
        android:id="@+id/ernesto"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_ernesto"
        android:text="Tema 2"
        android:textSize="20sp"
        android:layout_below="@+id/piero"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:background="#fff"

        />
    <Button
        android:id="@+id/riccardo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_riccardo"
        android:text="Tema 2"
        android:textSize="20sp"
        android:layout_below="@+id/ernesto"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:background="#fff"

        />

</RelativeLayout>